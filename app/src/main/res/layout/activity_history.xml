<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="#E6E6E6">
    <android.support.v7.widget.Toolbar
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史数据"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="当前显示："
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="#222222"
                />
            <Spinner
                android:id="@+id/hy_chartsw"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:overlapAnchor="false"
                android:entries="@array/SW"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="最大值："
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/hy_max"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="最小值："
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/hy_min"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historychart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            //解决刚进入界面时软键盘弹出
            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"
                android:overlapAnchor="false"

                />
            <Button
                android:id="@+id/hy_loadchart"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_history"
                android:layout_marginLeft="6dp"
                android:text="加载曲线"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_namechange"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:text="名称修改"
                android:background="@drawable/bg_history"
                android:layout_marginLeft="18dp"/>
            <Button
                android:id="@+id/save_photo"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:background="@drawable/bg_history"
                android:text="保存图片" />
            <Button
                android:id="@+id/export_excel"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:text="导出Excel"
                android:background="@drawable/bg_history"
                android:layout_marginLeft="18dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/id_deleteall"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_history"
                android:layout_marginLeft="18dp"
                android:text="删除所选数据"
                />
            <Button
                android:id="@+id/id_search_all"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_history"
                android:layout_marginLeft="15dp"
                android:text="查询所有数据"/>

        </LinearLayout>
        <TextView
            android:id="@+id/id_search_all_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </ScrollView>
</LinearLayout>